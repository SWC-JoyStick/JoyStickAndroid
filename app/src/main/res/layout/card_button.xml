<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="94dp"
        android:background="@color/peachpuff"
        android:orientation="vertical">

        <com.sevenheaven.iosswitch.ShSwitchView
            android:id="@+id/SwitchButton"
            android:layout_width="66dip"
            android:layout_height="44dip"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:shadowSpace="7dip"
            app:tintColor="#ff62cc2f" />

        <com.sevenheaven.iosswitch.ShSwitchView
            android:id="@+id/SwitchButton2"
            android:layout_width="66dip"
            android:layout_height="44dip"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/SwitchButton"
            app:layout_constraintVertical_bias="1.0"
            app:shadowSpace="7dip"
            app:tintColor="#03A9F4" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>